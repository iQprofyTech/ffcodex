{
  "name": "flow-forge-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm -w packages/shared run build && npm -w apps/backend run build && npm -w apps/worker run build",
    "dev:backend": "npm -w apps/backend run dev",
    "dev:worker": "npm -w apps/worker run dev",
    "dev:frontend": "npm -w apps/frontend run dev"
  }
}
